<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fondo"
                android:padding="15dp"
                tools:context=".Login"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="101dp" app:srcCompat="@drawable/acae" android:layout_centerHorizontal="true"
            android:id="@+id/imagen"
            android:contentDescription="TODO" android:layout_alignParentTop="true" android:layout_marginTop="38dp"/>

    <ProgressBar
            android:id="@+id/barraprogreso"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="visible" android:progressTint="@color/boton" android:foregroundTint="@color/boton"
            android:layout_alignParentTop="true" android:layout_marginTop="274dp" android:backgroundTint="@color/boton">
    </ProgressBar>
    <Switch
            android:text="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/chequearme" android:layout_marginBottom="39dp"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textousuario"
            android:layout_centerHorizontal="true" android:layout_alignBottom="@+id/barraprogreso"
            android:layout_marginBottom="46dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/textoclave"
            android:importantForAutofill="no"
            android:layout_alignParentBottom="true" android:layout_marginBottom="251dp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="Button"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:id="@+id/btningresar"
            android:onClick="Ingresar"
            android:elevation="10dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="173dp"/>
</RelativeLayout>