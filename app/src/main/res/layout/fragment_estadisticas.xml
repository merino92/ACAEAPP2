<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".estadisticas"
                android:padding="10dp"
            android:orientation="vertical"
            android:layout_gravity="center">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadisticas del Dia"
            android:textAlignment="center"
            tools:text="Estadisticas del Dia" android:textSize="18sp" android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

    <LinearLayout android:layout_width="365dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:padding="7sp"

    >
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:clickable="true"
        android:elevation="10dp"
        android:backgroundTint="#2676D6">

           <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:padding="5dp"
                         android:layout_margin="10dp"
           >

               <ImageView android:layout_width="80dp"
                          android:layout_height="70dp"
                            android:src="@drawable/c_atendido"

                           />
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                             android:orientation="horizontal">
                   <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" android:text="CLIENTES VISITADOS"
                           android:textAlignment="center" android:fontFamily="@font/roboto_medium"
                           android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>
                   <TextView android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/roboto_medium"
                             android:text="23"
                             android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>

               </LinearLayout>

           </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout android:layout_width="365dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:padding="7sp"

    >
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:clickable="true"
                android:elevation="10dp"
                android:backgroundTint="#FFC300">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_margin="10dp"
            >

                <ImageView android:layout_width="80dp"
                           android:layout_height="70dp"
                           android:src="@drawable/pedidos_b"

                />
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                              android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:text="PEDIDOS REALIZADOS"
                            android:textAlignment="center" android:fontFamily="@font/roboto_medium"
                            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/roboto_medium"
                              android:text="23"
                              android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout android:layout_width="365dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:padding="7sp"

    >
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                android:clickable="true"
                android:elevation="10dp"
                tools:elevation="5dp"
                android:backgroundTint="#D63626" tools:clickable="true">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_margin="10dp"
            >

                <ImageView android:layout_width="80dp"
                           android:layout_height="70dp"
                           android:src="@drawable/p_sinenviar"

                />
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                              android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:text="PEDIDOS NO ENVIADOS"
                            android:textAlignment="center" android:fontFamily="@font/roboto_medium"
                            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/roboto_medium"
                              android:text="23"
                              android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout android:layout_width="365dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:padding="7sp"

    >
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:clickable="true"
                android:elevation="10dp"
                android:backgroundTint="#38C125"
                tools:clickable="true">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_margin="10dp"
            >

                <ImageView android:layout_width="80dp"
                           android:layout_height="70dp"
                           android:src="@drawable/dinero_b"

                />
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                              android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:text="TOTAL DE VENTAS"
                            android:textAlignment="center" android:fontFamily="@font/roboto_medium"
                            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/roboto_medium"
                              android:text="23"
                              android:textSize="18sp" android:textStyle="bold" android:textColor="@color/boton"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>